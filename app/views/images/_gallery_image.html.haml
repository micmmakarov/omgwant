.gallery-image
  -user_name = i.user.full_name.blank? ? i.user.name : i.user.full_name
  .img
    =image_tag i.low_url
  .image-meta
    %h5
      -if i.title.present?
        =i.title
      -elsif i.location_name.present?
        =i.location_name
      -else
        No title
    %p
      =render :partial => "cutes/cute", :locals => {:image => i}
    %p.follow-user
      Follow
      =user_name
      
