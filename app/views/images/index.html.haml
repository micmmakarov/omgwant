- model_class = Image
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:created_time)
      %th= model_class.human_attribute_name(:location_name)
      %th= model_class.human_attribute_name(:low_url)
      %th= model_class.human_attribute_name(:thumb)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @images.each do |image|
      %tr
        %td= link_to image.id, image_path(image)
        %td= image.url
        %td= image.title
        %td= image.description
        %td= image.created_time
        %td= image.location_name
        %td= image.low_url
        %td= image.thumb
        %td=l image.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_image_path(image), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), image_path(image), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_image_path, :class => 'btn btn-primary'
