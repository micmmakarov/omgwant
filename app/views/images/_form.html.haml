= form_for @image, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :url, :class => 'control-label'
    .controls
      = f.text_field :url, :class => 'text_field'
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :created_time, :class => 'control-label'
    .controls
      = f.datetime_select :created_time, :class => 'datetime_select'
  .control-group
    = f.label :location_name, :class => 'control-label'
    .controls
      = f.text_field :location_name, :class => 'text_field'
  .control-group
    = f.label :low_url, :class => 'control-label'
    .controls
      = f.text_field :low_url, :class => 'text_field'
  .control-group
    = f.label :thumb, :class => 'control-label'
    .controls
      = f.text_field :thumb, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), images_path, :class => 'btn'
