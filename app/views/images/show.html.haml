- model_class = Image
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @image.url
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @image.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @image.description
%p
  %strong= model_class.human_attribute_name(:created_time) + ':'
  %br
  = @image.created_time
%p
  %strong= model_class.human_attribute_name(:location_name) + ':'
  %br
  = @image.location_name
%p
  %strong= model_class.human_attribute_name(:low_url) + ':'
  %br
  = @image.low_url
%p
  %strong= model_class.human_attribute_name(:thumb) + ':'
  %br
  = @image.thumb

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), images_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_image_path(@image), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), image_path(@image), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
