%header.main-header
  .navbar.navbar-fixed-top
    .navbar-inner
      %a.brand{:href => root_url}
        %img{:src => "assets/logo.png"}/
      %ul.nav
        %li
          %a{:href => "gallery"} Gallery
        %li
          %a{:href => "dashboard"} Dashboard
        %li
          %a{:href => "help"} Help
        %li
          %a{:href => "about"} About

      %ul.nav.pull-right
        %li.divider-vertical
        -if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              =image_tag current_user.image_url, :class => 'userpic'
              Hi, #{current_user.full_name}
              %b.caret
            %ul.dropdown-menu
              %li
                %a{:href => "#"} Settings
              %li.divider
              %li
                %a{:href => "#"}
                  =link_to('Logout', destroy_user_session_path, :method => :delete)
        -else
          %li
            %a{:href => "/auth"} Login